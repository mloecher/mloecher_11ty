---
layout: base-layout.njk
pagination:
  data: collections.blog
  size: 50
  reverse: true
  alias: blogs
---

<h1>
Blog
</h1>

{% for blog in blogs %}
  <article>
    <h2>
      <a href="{{ blog.url }}"> {{ blog.data.title }} </a>
    </h2>
    <time datetime="{{ blog.date | dateIso }}">{{ blog.date | dateReadable }}</time>
    {# {{ blog.templateContent | safe }} #}
  </article>
{% endfor %}